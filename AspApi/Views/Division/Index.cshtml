@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/Layout.cshtml";
}

<div class="mb-2">
    <label>Download Table :</label>
    <a href="@Url.Action("Excel2","Division")" class="btn btn-primary"><span>Excel</span></a>
    <a href="@Url.Action("CSV2","Division")" class="btn btn-primary"><span>CSV</span></a>
    <a href="@Url.Action("Report","Division")" class="btn btn-primary"><span>PDF</span></a>
</div>
<div>
    <button id="btnadd2" type="button" class="btn btn-info" data-toggle="modal" data-target="#myModalDiv" title="Create New Division">+</button>
</div>

<!-- Modal -->
<div id="myModalDiv" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title">Add Division</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input type="hidden" class="form-control" id="Id">
                    </div>
                    <div class="form-group">
                        <label for="Name">Nama Division:</label>
                        <input class="form-control" id="Name" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label for="Name">Nama Department:</label>
                        <div class="form-group">
                            <select class="form-control" id="DepartmentOption" name="DepartmentId"></select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="UpdateBtn" type="button" onclick="Edit()" class="btn btn-success">Update</button>
                    <button id="SaveBtn" type="button" onclick="Save()" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="table-responsive m-t-40">
    <table id="Division" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Department Name</th>
                <th>Create Date</th>
                <th>Update Date</th>
                <th>Action</th>
            </tr>
        </thead>
    </table>
</div>
@section scripts{
    <script src="~/Scripts/Division.js"></script>
}
